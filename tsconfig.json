{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "src/**/*",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ESNext",              // Modern JS output
    "module": "ESNext",              // Needed for import.meta
    "moduleResolution": "Node",      // Node-style module resolution
    "strict": true,                  // Enable strict type checking
    "baseUrl": ".",                  // Allow absolute imports
    "paths": {
      "@/*": ["src/*"]               // '@' resolves to 'src/'
    },
    "types": ["vite/client", "node"],// Vite + Node types
    "esModuleInterop": true,         // For default imports
    "skipLibCheck": true             // Avoid type errors in node_modules
  },
}